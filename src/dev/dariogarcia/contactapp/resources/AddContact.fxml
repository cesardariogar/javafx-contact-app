<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<DialogPane fx:id="DialogPaneContactAdd" headerText="Add New Contact" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dev.dariogarcia.contactapp.AddDialogController">
    <header>
        <AnchorPane>
            <children>
                <GridPane hgap="10" vgap="10">
                    <Label text="First Name:">
                        <GridPane.margin>
                            <Insets bottom="20.0" left="20.0" top="20.0"/>
                        </GridPane.margin>
                        <font>
                            <Font size="16.0"/>
                        </font>
                    </Label>
                    <Label text="Last Name:" GridPane.rowIndex="1">
                        <font>
                            <Font size="16.0"/>
                        </font>
                        <GridPane.margin>
                            <Insets bottom="20.0" left="20.0" top="20.0"/>
                        </GridPane.margin>
                    </Label>
                    <Label text="Phone Number:  " GridPane.rowIndex="2">
                        <GridPane.margin>
                            <Insets bottom="20.0" left="20.0" top="20.0"/>
                        </GridPane.margin>
                        <font>
                            <Font size="16.0"/>
                        </font>
                    </Label>
                    <Label text="Notes:" GridPane.rowIndex="3">
                        <padding>
                            <Insets bottom="20.0" left="20.0" top="20.0"/>
                        </padding>
                        <font>
                            <Font size="16.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="txtFldFirstName" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    <TextField fx:id="txtFldLastName" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <TextField fx:id="txtFldPhoneNumber" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    <TextArea fx:id="txtAreaNotes" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                </GridPane>
            </children>
        </AnchorPane>
    </header>
    <content>

    </content>
    <padding>
        <Insets right="20.0"/>
    </padding>
</DialogPane>
